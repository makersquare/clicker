div.field_with_errors {
	input {
	background-color: #FCFBBE;
	}
}

body {
	text-align: center;
}

/*font styling*/

.code-font {
	font-family: 'Source Code Pro';
}

.megrim-font {
	font-family: 'Megrim', cursive;
}

.slabo-font {
	font-family: 'Slabo', serif;
}

.gothic-caps-font {
	font-family: 'Carrois Gothic SC', sans-serif;
}

.opensans-font {
	font-family: 'Open Sans', sans-serif;
}

.smallcaps {
	font-variant: small-caps;
}

.italic {
  font-style: italic;
}

body div a:hover {
	background-color: 10%;
}

/*navigation styling*/

nav section ul li a img.gravatar {
	margin-right: 0.62rem;
}

#navigation nav ul li h1 a {
	font-size: 1.62rem;
	&:hover {
		background-color: 10%;
	}
	section li .gothic-caps-font {
		font-family: 'Carrois Gothic SC', sans-serif;
	}
}

#navigation nav section ul li ul li a {
	font-size: 1rem;
	letter-spacing: 0.05rem;
	padding-top: 0.6rem;
	padding-botton: 0.6rem;
}

.gravatar {
	border-radius: 50%;
}

div.home-sign-in {
	background-color: white;
}

.button {
	border-radius: 0.4rem;
	font-family: 'Open Sans', sans-serif;
}

input.button {
	border-radius: 0.4rem;
}

input {
	text-align: center;
}

::-webkit-input-placeholder {
	font-family: 'Source Code Pro';
	text-align: center;
}

:-moz-placeholder { /* Firefox 18- */
	font-family: 'Source Code Pro';
	text-align: center;  
}

::-moz-placeholder {  /* Firefox 19+ */
	font-family: 'Source Code Pro';
	text-align: center;  
}

:-ms-input-placeholder {  
	font-family: 'Source Code Pro';
	text-align: center;  
}

input.form-control {
	background-color: transparent;
	border: none;
	box-shadow: none;
}

#panel_fix {
	display: inline-block;
}

#about {
	text-align: initial;
}
