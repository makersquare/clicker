body {
	text-align: center;
}

/*font styling*/

.code-font {
	font-family: 'Source Code Pro';
}

.megrim-font {
	font-family: 'Megrim', cursive;
}

.slabo-font {
	font-family: 'Slabo', serif;
}

.gothic-caps-font {
	font-family: 'Carrois Gothic SC', sans-serif;
}

.opensans-font {
	font-family: 'Open Sans', sans-serif;
}

.smallcaps {
	font-variant: small-caps;
}

.italic {
  font-style: italic;
}

body div a:hover {
	background-color: 10%;
}

/*navigation styling*/

nav section ul li a img.gravatar {
	margin-right: 0.62rem;
}

#navigation nav ul li h1 a {
	font-size: 1.62rem;
	&:hover {
		background-color: 10%;
	}
}

#navigation nav section ul li ul li a {
	font-size: 1rem;
	letter-spacing: 0.05rem;
	padding-top: 0.6rem;
	padding-botton: 0.6rem;
}

.gravatar {
	border-radius: 50%;
}

div.home-sign-in {
	background-color: white;
}

.button {
	background-color: transparent;
	border: 3px solid $grey-yellow;
	font-weight: 400;
		&:hover{
			background-color: $grey-yellow;
		}
	border-radius: 0.4rem;
}
