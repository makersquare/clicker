body {
	text-align: center;
}

/*font styling*/

h1, h2, h3 {
	font-family: 'Droid Sans', sans-serif;
}

h4, h5, h6 {
	font-family: 'Karla', sans-serif;
	font-variant: small-caps;
}

p, span {
	font-family: 'Inconsolata', sans-serif;
}

body div a:hover {
	background-color: 10%;
}

/*navigation styling*/

div.navigation #navigation {
	color: red;
}