*{
	margin: 0;
}

@font-face {
	font-family: 'iconic-sm';
	// src: url('fonts/iconic-sm.eot');
	src: url('<%= asset_path("iconic-sm.eot") %>');
	src: url('<%= asset_path("iconic-sm.eot") + "?#iefix" %>') format('eot')
		, url('<%= asset_path("iconic-sm.woff") %>') format('woff')
		, url('<%= asset_path("iconic-sm.ttf") %>') format('truetype')
		, url('<%= asset_path("iconic-sm.svg") + "#Iconic" %>') format('svg');
	font-weight: normal;
	font-style: normal;
}

