<div id="class_groups">
<script>
  var source = new EventSource('http://stream.clicker.dev/test',{withCredentials:true});
</script>

  <div class="header">
    <h3 class="gothic-caps-font">manage my</h3>
    <h1 class="opensans-font">
      Classes
    </h1>
  </div>
<!-- displays each class -->

<br>

  <!-- add a new class button -->

  <!-- displays each class -->
    <div class="add-class row" id="add-class">
      <button class="opensans-font button" id="add-a-class">ADD A CLASS</button>
    </div>

      <!-- add a new class form -->
<div class="grey-form">
    <div class="new-class row" id="new-class-div">
      <h3 class="opensans-font smallcaps">create a class</h3>
      <% title = 'title' %>
      <% description = 'description' %>
      <%= render 'form' %>
      <p class="new-class-cancel"><a>cancel</a></p>
    </div>
</div>


    <div class="class-list">
    <% @class_groups.each do |class_group| %>

    <div class="single-class-padding">
      <div class="specific-class">
        
        <%= link_to "class_groups/#{class_group.id}/#display" do %>
          <div class="class-header opensans-font">
            <h3 class="opensans-font class-name"><%= class_group.name %></h3>
          </div>
        <% end %>
        
        <div class="row">
          <div class="class-options small-9 small-centered medium-6 medium-centered large-6 medium-centered columns">
            <div class="small-6 medium-6 large-6 columns">
              <%= link_to 'edit class', "class_groups/#{class_group.id}/edit", class: 'code-font edit-class' %>
            </div>
                <!-- this is not the right link to add students, memberships controller -->
            <div>
              <%= link_to 'manage members', "class_groups/#{class_group.id}/memberships", class: 'code-font edit-students' %>
            </div>
          </div>
        </div>

      </div>
    </div>
    <% end %>
    </div>
</div>