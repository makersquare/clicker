<p id="notice"><%= notice %></p>

<div>
  <h1><%= @class_group.name %></h1>

  <p>
    <%= @class_group.description %>  
  </p>
</div>

<div class="class-question-sets panel">
  
  <div ng-app="app" ng-controller="AppCtrl">
  <table class="table table-striped">
   <thead>
     <tr>
       <th>Name </th>
       <th>Description</th>
       <th>Action</th>
     </tr>
   </thead>
   <tbody>
     <tr ng-repeat="questionSet in questionSets">
       <td>{{questionSet.name}}</td>
       <td>
         <a href="#/edit/{{questionSet.id}}" class="btn btn-mini">Edit</a>
         <a ng-click="destroy(questionSet.id)" class="btn btn-danger btn-mini">Destroy</a>
       </td>
     </tr>
   </tbody>
  </table>
  </div>

</div>

<div class="question-sets-listing panel">
  <a href="#/new" class="btn btn-primary"><h3>Add A Question Set</h3></a>
</div>