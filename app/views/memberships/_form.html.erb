<%= form_tag class_group_memberships_path, id: "new-member-form", method: :post, remote: true do %>

  <div class="field row">
  <%= text_field_tag( 'membership[nickname]', '', placeholder: 'github username', class: 'form-control small-centered medium-centered large-centered columns' )%>
  </div>

  <%= label_tag('membership[kind]', "Set Teacher") %>
  <div class="switch radius">
    <input id="membership[kind]" type="checkbox">
    <label for="membership[kind]"></label>
  </div> 

<%= submit_tag("Add", class: 'button submit-new-student', remote: true )%>

<% end %>