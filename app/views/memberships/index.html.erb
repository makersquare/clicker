<div class="memberships">

<div>
  <h2>Members</h2>
</div>
  
  <div class="add-student-form panel">
    <h2>Add Student</h2>
    <%= render 'form' %>
    <div><a class="add-student-form-cancel"><p class="code-font smallcaps">cancel</p></a></div>
  </div>

  <!-- Successful Student Added - confirm -->
  <div class="add-student-confirm panel">

    <h3>You have just added to Ruby Course</h3>
    <div class="row">
      <a href="#"><img alt="Gravatar for user" src="https://avatars.githubusercontent.com/u/5787114?size=100" class="gravatar"></a>

      <ul class="small-block-grid-2">
        <li><button class="button open-sans-font smallcaps">ok</button></li>
        <li><button class="button open-sans-font smallcaps"> undo </button></li>
      </ul>
    </div>

  </div>

  <!-- Add Student Error: try again or cancel -->
  <div class="add-student-error panel">
    <h3>input is not a Github user. Would you like to try again?</h3>
    <div class="row">
      <a href="#"><img alt="sad Octocat" src="http://archaeogeek.github.io/ukqgis_talk/images/octocat_sad.gif"></a>
    </div>
    <!-- render form for add student -->
    <button class="button open-sans-font">YES</button>
    <div><p class="code-font smallcaps">cancel</p></div>
  </div>
  
  <!-- List of current members that have access to the class -->
  <div data-equalizer class="member-list">
    <div>
      <h2>Members</h2>
    </div>
    <div class="small-12 medium-6 large-6 columns" data-equalizer-watch>
      <h3>Instructors</h3>
      <p>
        <table>
          <% if @teacher_memberships.count == 0 %>
            <div class="no-members panel">
              <%= "No Instructors Assigned" %>
            </div>
          <% end %>

          <% @teacher_memberships.each do |teach_mem| %>
          <!-- Render partial for the following tr -->
          <!-- add the partial to create.js.erb script -->
            <tr data-id= <%= teach_mem.id %>>
              <td>@<%= teach_mem.user.nickname %></td>
              <td class="gravatar-container" data-id-pic= <%= teach_mem.id %>><img src="http://www.gravatar.com/avatar/<%= teach_mem.user.gravatar_id %>?size=60" alt="<%= teach_mem.user.name %> Gravatar" title="<%= teach_mem.user.name %> Gravatar" class="gravatar-radius"></td>
              <!-- this should link to their github account -->
              <td><%= link_to 'remove', class_group_membership_path(@class_group, teach_mem), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
            </tr>
          <% end %>
        </table>
      </p>
    </div>

    <div class="small-12 medium-6 large-6 columns" data-equalizer-watch>
      <h3>Students</h3>
      <p>
        <table>
          <% if @student_memberships.count == 0 %>
            <div class="no-members row panel">
              <%= "No Students Members" %>
            </div>
          <% end %>
          <% @student_memberships.each do |stud_mem| %>
            <tr data-id= <%= stud_mem.id %>>
              <td><%= stud_mem.user.name %></td>
              <!-- this should link to their github account -->
              <td>@<%= stud_mem.user.nickname %></td>
              <td><%= link_to 'remove', class_group_membership_path(@class_group, stud_mem), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
            </tr>
          <% end %>
        </table>
      </p>
    </div>
  </div>
</div>