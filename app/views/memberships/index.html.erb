<h1><%= @class_group.name %></h1>
<h2>Instructors</h2>

<table>
<% @teacher_memberships.each do |teach_mem| %>
  <tr>
    <td><%= teach_mem.user.name %></td>
    <!-- this should link to their github account -->
    <td>@<%= teach_mem.user.nickname %></td>
    <td><%= link_to 'remove', class_group_membership_path(@class_group, teach_mem), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<h2>Students</h2>

<table>
<% @student_memberships.each do |stud_mem| %>
  <tr>
    <td><%= stud_mem.user.name %></td>
    <!-- this should link to their github account -->
    <td>@<%= stud_mem.user.nickname %></td>
    <td><%= link_to 'remove', class_group_membership_path(@class_group, stud_mem), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<a>
  <div class="add-student-form-button panel">
    <h2>Add Student</h2>
  </div>
</a>


<div class="add-student-form panel">
  <h2>Add Student</h2>
  <%= render 'form' %>
</div>


<!-- Successful Student Added - confirm -->
<div class="add-student-successful panel">
  <h3>Do you want to add Catherine O'Neil to Ruby Course?</h3>
  <div class="row">
    <a href="#"><img alt="Gravatar for user" src="https://avatars.githubusercontent.com/u/5787114?size=100" class="gravatar"></a>

    <ul class="small-block-grid-2">
      <li><a><span class="fi-circle-x iconic-md" title="circle x" aria-hidden="true"></span></a></li>
      <li><a><span class="fi-circle-check iconic-md" title="circle check" aria-hidden="true"></span></a></li>
    </ul>
  </div>
</div>

<!-- Add Student Error: try again or cancel -->
<div class="add-student-error panel">
  <h3>input is not a Github user. Would you like to try again?</h3>
  <div class="row">
    <a href="#"><img alt="sad Octocat" src="http://archaeogeek.github.io/ukqgis_talk/images/octocat_sad.gif"></a>
  <!-- render form for add student -->
  <%= render 'form' %>
  </div>
</div>